{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Echidna: Test Current File",
            "type": "shell",
            "command": "docker run --rm -it -v \"${workspaceFolder}:/src\" -w /src ghcr.io/crytic/echidna/echidna echidna ${relativeFile} --contract ${input:contractName}",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "contractName",
            "type": "promptString",
            "description": "Name of the contract to test",
            "default": "TestTaxpayer"
        }
    ]
}